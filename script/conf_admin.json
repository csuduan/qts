{
  "app_name": "qts-admin",
  "server_port": 8084,
  "rpc_port": 8085,
  "data_path": "/opt/data/qts",
  "log_path": "/opt/logs/qts",
  "db_url": "sqlite:////opt/data/qts/qts.db",

  "jobs":[
    {
      "id":"before_open_job",
      "name":"开盘前处理",
      "cron":"45 8,20 * * *",
      "func":"qts.admin.job.before_open_job"
    },
    {
      "id":"conn_api_day",
      "name":"开盘自动连接",
      "cron":"50 8,20 * * *",
      "func":"qts.admin.job.connect_api_job"
    },
    {
      "id":"dissconn_api_day",
      "name":"收盘断开连接",
      "cron":"40 15,2 * * *",
      "func":"qts.admin.job.disconnect_api_job"
    },
    {
      "id":"after_close_job",
      "name":"收盘后处理",
      "cron":"35 15 * * *",
      "func":"qts.admin.job.after_close_job"
    },
    {
      "id":"export_pos_job",
      "name":"导出持仓",
      "cron":"45 15 * * 1-5",
      "func":"qts.admin.job.export_pos_job"
    }
  ],
  "routers": [
    {
      "path": "/system",
      "meta": {
        "icon": "ep:set-up",
        "title": "系统",
        "rank": 2
      },
      "children": [
        {
          "path": "/system/user",
          "meta": {
            "title": "用户管理"
          },
          "children": [
            {
              "path": "/system/user/user/index",
              "name": "user",
              "meta": {
                "title": "用户"
              }
            },
            {
              "path": "/system/user/role/index",
              "name": "role",
              "meta": {
                "title": "角色"
              }
            }
         ]
        },
        {
          "path": "/system/permission",
          "meta": {
            "title": "权限管理"
          },
          "children": [
            {
              "path": "/system/permission/page/index",
              "name": "permissionPage",
              "meta": {
                "title": "页面权限"
              }
            },
            {
              "path": "/system/permission/button/index",
              "name": "permissionButton",
              "meta": {
                "title": "按钮权限"
              }
            }
          ]
        },
        {
          "path": "/system/job/index",
          "name": "job",
          "meta": {
            "title": "任务管理"
          }
        },
        {
          "path": "/system/help",
          "name": "help",
          "meta": {
            "title": "帮助"
          }
        }      
      ]
    },
    {
      "path": "/acct",
      "redirect": "/acct/view/index",
      "meta": {
        "icon": "ep:data-line",
        "title": "账户",
        "rank": 3
      },
      "children": [
        {
          "path": "/acct/view/index",
          "name": "view",
          "meta": {
            "title": "账户视图"
          }
        },
        {
          "path": "/acct/detail/index",
          "name": "acctDetail",
          "meta": {
            "showLink": false,
            "dynamicLevel": 3
          }
        },
        {
          "path": "/acct/trade/index",
          "name": "acctTrade",
          "meta": {
            "title": "账户交易"
          }
        },
        {
          "path": "/acct/config/index",
          "name": "acctConf",
          "meta": {
            "title": "账户配置"
          }
        },{
          "path": "/welcome/params-detail/:id",
          "component": "params-detail",
          "name": "TabParamsDetail",
          "meta": {
            "showLink": false
          }
        }
      ]
    }
  ]
}